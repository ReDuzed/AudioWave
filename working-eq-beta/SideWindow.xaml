        <Button x:Name="button_load" Content="Load" HorizontalAlignment="Left" Margin="34,338,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="playlist" HorizontalAlignment="Left" Height="323" Margin="9,10,0,0" VerticalAlignment="Top" Width="124"/>
