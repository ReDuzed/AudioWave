        <Label x:Name="label_clear" Content="N" HorizontalAlignment="Left" Margin="97,58,0,0" VerticalAlignment="Top" FontFamily="Wingdings" FontSize="32" Foreground="#FF969696" RenderTransformOrigin="2.402,0.522" MouseEnter="On_MouseEnter" MouseLeave="On_MouseLeave" MouseDown="On_Clear"/>
        <Label x:Name="label_loop" Content="Q" HorizontalAlignment="Left" Margin="94,287,0,0" VerticalAlignment="Top" FontFamily="Wingdings 3" FontSize="32" Foreground="#FF969696" RenderTransformOrigin="2.402,0.522" MouseDown="On_Loop"/>
    </Grid>
</Window>
