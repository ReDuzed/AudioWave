<Window x:Class="AudioWave.AuxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioWave"
        mc:Ignorable="d"
        Title="AuxWindow" Height="450" Width="151" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" >
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="143"/>
        <ListBox x:Name="list_input" HorizontalAlignment="Left" Height="60" Margin="10,36,0,0" VerticalAlignment="Top" Width="125" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="input_Changed"/>
        <Label Content="Input" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="list_output" HorizontalAlignment="Left" Height="60" Margin="10,132,0,0" VerticalAlignment="Top" Width="125" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="output_Change"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label_mic" Content="Microphone" HorizontalAlignment="Left" Margin="10,360,0,0" VerticalAlignment="Top" MouseDown="On_MouseDown" />
        <Label Content="Modes" HorizontalAlignment="Left" Margin="10,334,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label_monitor" Content="Monitoring" HorizontalAlignment="Left" Margin="10,386,0,0" VerticalAlignment="Top" MouseDown="On_MouseDown" />
        <Slider HorizontalAlignment="Left" Margin="50,197,0,0" VerticalAlignment="Top" Width="85" Minimum="1" SmallChange="0.5"/>
        <Label Content="20hz" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="50,220,0,0" VerticalAlignment="Top" Width="85" Minimum="1" SmallChange="0.5"/>
        <Slider HorizontalAlignment="Left" Margin="50,243,0,0" VerticalAlignment="Top" Width="85" Minimum="1" SmallChange="0.5"/>
        <Slider HorizontalAlignment="Left" Margin="50,266,0,0" VerticalAlignment="Top" Width="85" Minimum="1" SmallChange="0.5"/>
        <Slider HorizontalAlignment="Left" Margin="50,289,0,0" VerticalAlignment="Top" Width="85" Minimum="1" SmallChange="0.5"/>
        <Label x:Name="label_loop" Content="Q" HorizontalAlignment="Left" Margin="104,369,0,0" VerticalAlignment="Top" FontFamily="Wingdings 3" FontSize="32" Foreground="#FF969696" RenderTransformOrigin="2.402,0.522" MouseDown="On_Refresh"/>
        <Label Content="20hz" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
